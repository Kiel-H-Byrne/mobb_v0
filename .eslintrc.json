{
  "plugins": ["meteor"],
  "extends": ["plugin:meteor/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "meteor": true,
    "serviceworker": true,
    "worker": true,
    "jquery": true
  },
  "rules" : {
    "no-unused-vars" : 0,
    "no-undef" : 0,
    "meteor/no-session": [0]
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  }
}