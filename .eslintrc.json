{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "shared-node-browser": true,
        "amd": true,
        "jquery": true,
        "meteor": true,
        "mongo": true,
        "serviceworker": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "sourceType": "script"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}